{% extends 'base.html.twig' %}

{% block title %}
	Ajouter une adresse  - Shop Grocery
{% endblock %}

{% block content %}

	<h1 xlass="text-secondary">Ajouter Une Adresse</h1>
	<hr>
	<p class="mt-5">
		<a class="link text-success" href="{{path('account')}}">retour</a>

	</p>


	{{form_start(form)}}
	<div class="row">
		<div class="col-md-6">
			{{ form_row(form.name) }}

		</div>
		<div class="col-md-6">

			{{ form_row(form.firstname) }}

		</div>
	</div>
	<div class="row">
		<div class="col-md-6">

			{{ form_row(form.lastname) }}

		</div>
		<div class="col-md-6">

			{{ form_row(form.company) }}

		</div>
	</div>
	<div class="row">
		<div class="col-md-6">

			{{ form_row(form.address) }}

		</div>
		<div class="col-md-6">

			{{ form_row(form.postal) }}

		</div>
	</div>
	<div class="row">
		<div class="col-md-6">

			{{ form_row(form.city) }}

		</div>
		<div class="col-md-6">

			{{ form_row(form.country) }}

		</div>
	</div>
	<div class="row">
		<div class="col-md-6">

			{{ form_row(form.phone) }}

		</div>

	</div>
	{{ form_row(form.submit) }}

	{{form_end(form)}}


{% endblock %}
