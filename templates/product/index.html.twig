
{% extends 'base.html.twig' %}
 
{% block title %}Nos Produits{% endblock %}

{% block content %}



<div class="row">
<div class="col-md-3">
<h3>Filtrer</h3>
{# colonne de filtre #}
 {# 
 formulaire mort née!!
 {{form(form)}} 
 #}
 <form class="form-group" action="{{path('searchProduct')}}" method="post">
 <input type="text" class="form-control" placeholder ="votre recherche" name="search">
 <select name="category" class="form-control mt-1">
   <option value=""  selected >
    Choisir une catégorie
   </option>  
    {% for category in categories %}
      <option value="{{category.id}}">
      {{category.name}}
      </option>
    {% endfor %}
 </select>
  <input type="submit" value="search" class="btn btn-info expanded mt-2">
 </form>
  
</div>
<div class="col-md-9">
<h3 class="text-capitalize mb-5 mr-5">Nos produits </h3>

    <div class="row">
{% for product in products  %}
    <div class="col-md-4 mb-5  mx-auto">
    {# {{ dump(product) }} #}
    <div class="product-item text-center">
     <h6 class="text-uppercase fw-ligther mb-2">
       
       {{product.name}}
     </h6>
      {# image ici , feature en cours #}
     <a href="{{path('product' , {'slug' : product.slug})}}">  <img src =  "{{siteurl}}/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid rounded-circle border border-dark border-2" > </a>
     <span class ="d-block">
     {{product.subtitle}}
  
     </span>
       <span>
       {{(product.price /100)| number_format(2 , ',' , '.')}} €
       </span>
    </div>    
    </div>

    
{% endfor %}
    
    </div>
</div>
</div>


{% endblock %}
